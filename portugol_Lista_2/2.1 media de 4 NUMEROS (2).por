programa {
  inclua biblioteca Matematica --> mat
  funcao inicio() {
    
   real numero1, numero2, numero3, numero4

   escreva ("Digite o primeiro numero:\t")
   leia (numero1)
   escreva("Digite o segundo numero:\t")
   leia(numero2)
   escreva("Digite o terceiro numero:\t")
   leia(numero3)
   escreva("Digire o quarto numero:\t")
   leia(numero4)

   media = (numero1 + numero2 + numero3 + numero4)/4
   escreva ("A média é:\t", media)
  }
}
