programa {
  funcao inicio() {
  //Elabore um programa que calcule e exibir a área de um triângulo Área = (Base x altura) divido por 2. 

  // variavel de entrada 
  real base, altura
  // variavel de saida
  real area

  //entrada
  escreva("Digite a base do triangulo:\t")
  leia(base)
  escreva("Digite a altura do triangulo:\t")
  leia(altura)

  // processamento
  area = (base * altura)/2

 //saida
 escreva("A area do triangulo é:", area)


  

  }
}
